# AI Forecasting API Environment Configuration

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=AI-Based Stock Forecasting API
VERSION=1.0.0
DESCRIPTION=Comprehensive AI-powered stock forecasting system

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Settings
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8080"]

# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/ai_forecasting
REDIS_URL=redis://localhost:6379/0

# Storage Settings
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=ai-forecasting
MINIO_SECURE=false

# Authentication Settings
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Model Settings
MODEL_STORAGE_PATH=./models
MODEL_CACHE_SIZE=10

# Data Settings
DATA_STORAGE_PATH=./data
MAX_FILE_SIZE=104857600

# Forecasting Settings
DEFAULT_FORECAST_HORIZON=7
MAX_FORECAST_HORIZON=90
MIN_HISTORICAL_DATA_DAYS=252

# Data Sources
YAHOO_FINANCE_ENABLED=true
ALPHA_VANTAGE_ENABLED=false
ALPHA_VANTAGE_API_KEY=

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Settings
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Google Sheets Integration
GOOGLE_SHEETS_CREDENTIALS_FILE=
GOOGLE_SHEETS_SCOPES=["https://www.googleapis.com/auth/spreadsheets", "https://www.googleapis.com/auth/drive"] 